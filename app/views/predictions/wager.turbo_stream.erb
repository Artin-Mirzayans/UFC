<%= turbo_stream.update "flash", partial: "layouts/flash" %>
<%= turbo_stream.update("fight_#{@fight.id}") do %>
  <%= render partial: "fights/prediction", locals: {fight: @fight, 
    red_prediction: @fight.get_method_prediction(current_user, @fight.red), 
    distance_prediction: @fight.get_distance_prediction(current_user, @fight), 
    blue_prediction: @fight.get_method_prediction(current_user, @fight.blue) } %>
<% end %>
<%= turbo_stream.update "budget", "Budget: $#{@user_event_budget.budget}" %>