<div>
<%= @event.name%>
<br>
<%= @event.location %>
<br>
<%= @event.date %>
</div>

<%if current_user.role == 'moderator'%>
    <p>HI I AM MODERATOR</p>
    
    <div id="options" data-controller="events">
  <h1>Toggle Visibility</h1>
  
  <button data-action="events#showTargets">Show All Elements</button>
  <button data-action="events#hideTargets">Hide All Elements</button>
  <button data-action="events#toggleTargets">Toggle Element Visibility</button>
    
  <p data-events-target="hideable" hidden>The Flamboyent Thing #1<p/>
  <p data-events-target="hideable" hidden>The Slightly Stealthy Thing #2<p/>
</div>

<%= button_to('Add Fight', new_fight_path, method: "get") %>

<%end%>

<% @fights.each do |fight| %>
    <div class="fight-name">
      <%= fight.f1 %> vs <%= fight.f2 %>
      <%= button_to('Update', edit_fight_path(@event.id, fight.id),
          method: "get") %>
      <%= button_to('Delete', delete_fight_path(fight.id),
          method: "delete") %>
    </div>
  <% end %>

