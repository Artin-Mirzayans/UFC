<%= stylesheet_link_tag params[:controller] %>
<div id="event">

<div id="title">
<h2><%= @event.name %></h1>
<h1><%= @event.red %> vs <%= @event.blue %></h1>
<%= image_tag @event.red_image.variant(resize_to_limit: [400, 400]) %>
<%= image_tag @event.blue_image.variant(resize_to_limit: [400, 400]) %>
<h3><%= @event.location %></h2>
<h3><%= @event.date %></h2>
<h2>$<%= @user_event_budget.budget %></h2>
</div>


<% if is_admin? %>
    <%= button_to('Delete Event', delete_event_path(@event.id), method: "delete") %>
<% end %>

<% if is_admin_or_mod? %>
    <% if @event.INPROGRESS? %>
    <%= button_to('Close Event', new_result_path(@event.id), method: "get") %>
    <% end %>
    <%= button_to('Edit Event', edit_event_path(@event.id), method: "get") %>
    <%= button_to('Add Fight', new_fight_path(@event.id), method: "get") %>
<% end %>

<br>

<%= render partial: "fights/fights"%>

</div>

