    <% content_for :css do -%>
      <%= stylesheet_link_tag params[:controller] %>
    <% end -%>

<div id="event-ui">

<h1>Add Event</h1>

<%= form_with model: @event, url: create_event_path, method: :post do |form| %>

  <%= form.label :apiname, "API Name: " %>
  <%= form.text_area :apiname, size: "40x1" %>
  <br>
  <%= form.label :name, "Name: " %>
  <%= form.text_area :name, size: "20x1" %>
  <br>
  <%= form.label :location, "Location: " %>
  <%= form.text_area :location, size: "35x1" %>
  <br>
  <%= form.label :venue, "Venue: " %>
  <%= form.text_area :venue, size: "35x1" %>
  <br>
  <%= form.label :red, "Red: " %>
  <%= form.text_area :red, size: "10x1" %>
  <br>
  <%= form.label :blue, "Blue: " %>
  <%= form.text_area :blue, size: "10x1" %>
  <br>
  <%= form.label :budget, "Budget: "%>
  <%= form.text_area :budget, size: "5x1"%>
  <br>
  <div data-controller="events-images">
    <%= form.file_field :red_image, direct_upload: true, accept: 'image/png, image/jpeg', data: { 'events-images_target': 'input_red', action: "change->events-images#uploadFile" } %>
  <div data-events-images-target="progress_red"></div>
    <%= form.file_field :blue_image, direct_upload: true, accept: 'image/png, image/jpeg', data: { 'events-images_target': 'input_blue', action: "change->events-images#uploadFile" } %>
  <div data-events-images-target="progress_blue"></div>
  </div>
  <%= form.label :date, "Date: " %>
  <%= form.date_field :date %>
  <br>
  <%= form.radio_button(:category, "PPV") %>
  <%= form.label(:category, "Pay-Per-View") %>
  <%= form.radio_button(:category, "FN") %>
  <%= form.label(:category, "Fight Night") %>
  <br>
  <%= form.submit "Submit" %>
<% end %>

</div>