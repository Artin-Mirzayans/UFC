<h1>Edit Fight</h1>

<%= form_with model: @fight, url: update_fight_path(@event_id, @fight_id), method: :patch do |form| %>
  <%= form.label :f1, "Fighter 1: " %>
  <%= form.text_area :f1, size: "35x1" %>
  <br>
  <%= form.label :f2, "Fighter 2: " %>
  <%= form.text_area :f2, size: "35x1" %>
  <br>
  <%= form.submit "Edit Fight" %>
<% end %>