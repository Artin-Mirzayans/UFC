<div id="fights">

    <h5 id="budget">Budget: $<%= @user_event_budget.budget %></h5>

    <div id="card">
    <%= button_to('MAIN', main_card_path(@event.id), method: "post", disabled: (@card == "MAIN")) %>
    <%= button_to('PRELIMS', prelims_card_path(@event.id), method: "post", disabled: (@card == "PRELIMS")) %>
    <% if @event.category == "PPV" %>
    <%= button_to('EARLY PRELIMS', early_prelims_card_path(@event.id), method: "post", disabled: (@card == "EARLY")) %>
    <% end %>
    </div>

        <% @fights.each do |fight| %>
        <div class="fight" data-controller="fights">
            <%= render partial: "fights/prediction", locals: {fight: fight, 
            red_prediction: fight.get_method_prediction(current_user, fight.red), 
            distance_prediction: fight.get_distance_prediction(current_user, fight), 
            blue_prediction: fight.get_method_prediction(current_user, fight.blue) } %>
        </div>
        <% end %>
    
</div>